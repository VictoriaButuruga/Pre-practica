const express = require('express');
const bodyParser = require('body-parser');
const axios = require('axios');
const gtts = require('google-tts-api');

const app = express();
app.use(bodyParser.json());

app.post('/webhook', async (req, res) => {
  const intent = req.body.queryResult.intent.displayName;

  if (intent === 'WeatherIntent') {
    const location = req.body.queryResult.parameters.location; // Assuming you have a parameter named "location"
    const apiKey = 2bfb58998c8b247b41a48c51c7336e19;
    
    try {
      const weatherResponse = await axios.get(`http://api.openweathermap.org/data/2.5/weather?q=${location}&appid=${apiKey}&units=metric`);
      const temperature = weatherResponse.data.main.temp;
      const weatherDescription = weatherResponse.data.weather[0].description;

      const responseText = `The weather in ${location} is ${temperature}Â°C with ${weatherDescription}.`;
      const speechUrl = gtts.getAudioUrl(responseText, {
        lang: 'en',
        slow: false,
        host: 'https://translate.google.com',
      });

      const response = {
        fulfillmentMessages: [
          {
            text: { text: [responseText] },
          },
          {
            platform: 'ACTIONS_ON_GOOGLE',
            simpleResponses: {
              simpleResponses: [
                {
                  textToSpeech: speechUrl,
                },
              ],
            },
          },
        ],
      };
      res.json(response);
    } catch (error) {
      console.error('Error fetching weather:', error);
      const response = {
        fulfillmentText: "I'm sorry, but I couldn't retrieve the weather information at the moment.",
      };
      res.json(response);
    }
  } else {
    const response = {
      fulfillmentText: "I'm not sure what you're asking.",
    };
    res.json(response);
  }
});

const PORT = process.env.PORT || 4000;
app.listen(PORT, () => {
  console.log(`Webhook server is running on port ${PORT}`);
});
